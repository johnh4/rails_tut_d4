<%= provide(:title, "Sign In") %>

<div class="row">
	<div class="span6 offset3">
		<h1>Sign In</h1>
		<%= form_tag sessions_path do %>
			<%= label_tag :email %>
			<%= text_field_tag :email, params[:email] %>

			<%= label_tag :password %>
			<%= password_field_tag :password %>

			<br>
			<%= submit_tag "Sign In", class: "btn btn-primary btn-large" %>
		<% end %>
	</div>
</div>